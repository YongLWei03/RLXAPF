<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:paddingLeft="@dimen/specturm_horizontal_padding"
    android:paddingRight="@dimen/specturm_horizontal_padding"
    android:paddingTop="@dimen/specturm_vertical_padding"
    android:paddingBottom="@dimen/specturm_vertical_padding">

    <TextView
        android:id="@+id/section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/specturm_font_size"
        android:textColor="@color/label_color"/>

</LinearLayout>