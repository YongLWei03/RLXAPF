<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg"
    tools:context="cn.edu.siso.rlxapf.AboutFragment">

    <ImageView
        android:layout_width="@dimen/about_logo_size"
        android:layout_height="@dimen/about_logo_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/about_vertical_margin"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/about_vertical_margin"
        android:text="@string/about_copy_right"
        android:textColor="@color/label_color"
        android:textSize="@dimen/about_font_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_vertical_margin"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/prefs_item_horizontal_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/prefs_item_vertical_padding"
            android:paddingRight="@dimen/prefs_item_horizontal_padding"
            android:paddingTop="@dimen/prefs_item_vertical_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:background="@android:color/transparent"
                android:text="@string/about_label_sw_version"
                android:textColor="@color/label_color"
                android:textSize="@dimen/about_font_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_sw_version"
                android:textColor="@android:color/black"
                android:textSize="@dimen/about_font_size"/>

            <ImageView
                android:layout_width="@dimen/prefs_item_icon_size"
                android:layout_height="@dimen/prefs_item_icon_size"
                android:layout_marginLeft="@dimen/prefs_item_icon_left_margin"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_prefs_arr_right" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_line_width"
            android:src="@color/split_line_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/prefs_item_vertical_padding"
            android:paddingRight="@dimen/prefs_item_horizontal_padding"
            android:paddingTop="@dimen/prefs_item_vertical_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/about_label_contact_us"
                android:textColor="@color/label_color"
                android:textSize="@dimen/about_font_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_contact_us"
                android:textColor="@android:color/black"
                android:textSize="@dimen/about_font_size"/>

            <ImageView
                android:layout_width="@dimen/prefs_item_icon_size"
                android:layout_height="@dimen/prefs_item_icon_size"
                android:layout_marginLeft="@dimen/prefs_item_icon_left_margin"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_prefs_arr_right" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_line_width"
            android:src="@color/split_line_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/prefs_item_vertical_padding"
            android:paddingRight="@dimen/prefs_item_horizontal_padding"
            android:paddingTop="@dimen/prefs_item_vertical_padding">

            <Button
                android:id="@+id/about_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:background="@android:color/transparent"
                android:text="@string/about_label_description"
                android:textColor="@color/label_color"
                android:textSize="@dimen/about_font_size"
                android:minHeight="0dp"
                style="?android:attr/borderlessButtonStyle"/>

            <ImageView
                android:layout_width="@dimen/prefs_item_icon_size"
                android:layout_height="@dimen/prefs_item_icon_size"
                android:layout_marginLeft="@dimen/prefs_item_icon_left_margin"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_prefs_arr_right" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
