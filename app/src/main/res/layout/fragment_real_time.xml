<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.edu.siso.rlxapf.RealTimeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/main_top_tab_indicator_horizontal_padding"
        android:paddingRight="@dimen/main_top_tab_indicator_horizontal_padding"
        android:background="@color/main_top_tab_bg_color"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/real_time_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/main_top_tab_indicator_color"
            app:tabIndicatorHeight="@dimen/main_top_tab_indicator_height"
            app:tabGravity="fill"
            app:tabTextColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabMode="fixed" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/real_time_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_bg"/>

</LinearLayout>
