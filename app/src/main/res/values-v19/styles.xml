<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Preference样式-->
        <item name="preferenceTheme">@style/PreferenceStyle</item>

        <!--设置对话框背景为透明-->
        <item name="android:dialogTheme">@style/dialog_background_transparent</item>
    </style>

    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--标题栏透明设置-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!--Preference样式-->
        <item name="preferenceTheme">@style/PreferenceStyle</item>

        <!--设置对话框背景为透明-->
        <item name="android:dialogTheme">@style/dialog_background_transparent</item>
    </style>

    <style name="PreferenceStyle">

    </style>

    <style name="dialog_background_transparent" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

</resources>
